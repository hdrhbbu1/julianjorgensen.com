extends layout.pug

block content
  tr
    td.alert.alert-bad #{itemAmount} was due #{timeOverdue}
  tr
    td.content-wrap
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td.content-block  Hi #{customerName},
        tr
          td.content-block  This is a reminder that invoice ##{itemNumber} was <strong>due #{timeOverdue}</strong>. You can pay the total of <strong>#{itemAmount}</strong> online by clicking the button below.
        tr
          td.content-block  I appreciate your prompt action.
        tr
          td.content-block  &mdash; Julian
        tr
          td.content-block(itemprop='handler', itemscope='', itemtype='http://schema.org/HttpActionHandler')
            a.btn.btn-bad(href='https://julianjorgensen.herokuapp.com/invoice/' + itemId + '/' + itemToken, itemprop='url') View and Pay Invoice
