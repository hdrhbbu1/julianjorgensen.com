extends layout.pug

block content
  tr
    td.alert(class='alert-primary')
  tr
    td.content-wrap
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td.content-block  Hi #{customerName},
        tr
          td.content-block  As promised, here's the estimate for #{projectName}. You can view it by clicking the button below. Please note that it expires on #{expirationDateFormatted}.
        tr
          td.content-block  Thank you!
        tr
          td.content-block  &mdash; Julian
        tr
          td.content-block(itemprop='handler', itemscope='', itemtype='http://schema.org/HttpActionHandler')
            a.btn.btn-primary(href='https://julianjorgensen.herokuapp.com/estimate/' + estimateId + '/' + estimateToken, itemprop='url') View Estimate
