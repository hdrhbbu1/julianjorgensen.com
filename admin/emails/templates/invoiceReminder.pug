extends layout.pug

block content
  tr
    td.alert.alert-warning #{itemAmount} is due #{timeTillDueDate}
  tr
    td.content-wrap
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td.content-block  Hi #{customerName},
        tr
          td.content-block  This is a reminder that invoice ##{itemNumber} is <strong>due #{timeTillDueDate}</strong>. You can pay the total of <strong>#{itemAmount}</strong> online by clicking the button below.
        tr
          td.content-block  Let me know if you have any questions.
        tr
          td.content-block  &mdash; Julian
        tr
          td.content-block(itemprop='handler', itemscope='', itemtype='http://schema.org/HttpActionHandler')
            a.btn.btn-warning(href='http://julianjorgensen.herokuapp.com/invoice/' + itemId + '?token=' + itemToken, itemprop='url') View and Pay Invoice
